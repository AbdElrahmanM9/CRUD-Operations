<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/brands.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;"></nav>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        
            <a class="navbar-brand">CRUD</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
             @if (Request.IsAuthenticated)
            {
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-link">@Html.ActionLink("Employees", "Index", "Employee")</li>
                </ul>
            }
            </div>
            @Html.Partial("_LoginPartial")

    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @*<script src="~/Content/dataTables.responsive.min.js"></script>*@
    <script src="~/Content/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>